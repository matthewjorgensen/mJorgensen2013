<div id="project-overview" class="hide">
	<h1><%=raw @project.title %></h1>
	<a href="#" class="close">x</a>
	<div class="description">
		<%=raw @project.description %>
	</div>
</div>  
<div id="project-wrap">
	<div class="gallery-wrap">
		<ul class="unstyled gallery clearfix">
	    <% @project.images.each do |image| %>
			<li class="item">
	       		<%= image_tag(image.thumbnail().url) %>
	   		</li>
		<% end %>
		</ul>
		<div class="gallery-controls">
			<a href="#" id="prev">Prev</a>
			<a href="#" id="next">Next</a>
		</div>
	</div>
	<ul class="unstyled inline-list clearfix">
		<li class="thumbnail-cta">
			<a href="#" class="icon-thumbs" title="View Info">View thumbnails</a>
		</li>
		<li class="project-title">
			<h6><%=raw @project.title %></h6>
		</li>
		<li class="info">
			<a href="#" class="icon-info" title="View Project Info">View project info</a>
		</li>
	</ul>
</div>
<div id="project-thumbnails" class="hide">
	<ul class="unstyled thumbnail-wrap inline-list clearfix">
	<% @project.images.each_with_index do |image, index| %>
		<li class="project-thumbnail">
			<a href="#" data="<%= raw index %>" class="thumb"><%=  image_tag(image.thumbnail('140x140#c').url) %></a>
		</li>
	<% end %>
	</ul>
</div>
