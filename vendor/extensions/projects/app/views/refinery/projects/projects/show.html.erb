<section class="project-overview">
	<h1><%=raw @project.title %></h1>
	<div class="description">
		<%=raw @project.description %>
	</div>
</section>  
<section class="project-wrap">
	<div class="carousel slide">
		<ul class="carousel-inner unstyled gallery">
	    <% @project.images.each do |image| %>
    		<li>
        		<%= image_tag(image.thumbnail().url) %>
    		</li>
   		<% end %>
		</ul>
	</div>
	<ul class="unstyled">
		<li class="thumbnail-cta">
			<a href="#" class="icon-thumbs" title="View Info">View thumbnails</a>
		</li>
		<li class="project-title">
			<h6><%=raw @project.title %></h6>
		</li>
		<li class="info">
			<a href="#" class="icon-info" title="View Project Info">View project info</a>
		</li>
	</ul>
</section>
<section class="gallery-thumbnails">
	<ul class="unstyled thumbnail-wrap">
	<% @project.images.each do |image| %>
		<li class="project-thumbnails">
    		<%= image_tag(image.thumbnail('140x140#c').url) %>
		</li>
	<% end %>
	</ul>
</section>