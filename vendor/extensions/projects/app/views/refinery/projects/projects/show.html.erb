<div id="ProjectWrap">
	<div id="ProjectCarousel" class="gallery-wrap">
		<div id="ProjectOverview" class="hide">
			<a href="#" class="close">x</a>
			<div class="overview">
				<h1><%=raw @project.title %></h1>
				<div class="description">
					<%=raw @project.description %>
				</div>
			</div>
		</div>
		<div id="ProjectGallery" class="carousel slide">
			<ul class="unstyled gallery carousel-inner clearfix">
	    	<% @project.images.each_with_index do |image, index| %>
				<li class="item<%= ' active' if index == 0 %>" data="<%= raw index %>">
	       			<%= image_tag(image.thumbnail('980x652').url) %>
	   			</li>
				<% end %>
			</ul>			
			<div class="gallery-controls">
				<a href="#ProjectGallery" id="prev" data-slide="prev"><span>Prev</span></a>
				<a href="#ProjectGallery" id="next" data-slide="next"><span>Next</span></a>
			</div>
		</div>
		<div id="ProjectThumbnails" class="hide">
			<ul class="unstyled thumbnail-wrap inline-list clearfix">
			<% @project.images.each_with_index do |image, index| %>
				<li class="project-thumbnail">
					<a href="#" data="<%= raw index %>" class="thumb"><%=  image_tag(image.thumbnail('170x170#c').url) %></a>
				</li>
			<% end %>
			</ul>
		</div>
	</div>
	<ul class="unstyled clearfix">
		<li class="thumbnail-cta pull-left">
			<a href="#" class="icon-thumbs" title="View Info">View thumbnails</a>
		</li>
		<li class="info pull-right">
			<a href="#" class="icon-info pull-right" title="View Project Info">View project info</a>
		</li>
		<li class="project-title">
			<h6><%=raw @project.title %></h6>
		</li>
	</ul>
</div>

