<% content_for :body do %>
  <div class='contact_inquiries'>
    <%=raw @page.content_for(Refinery::Pages.default_parts.first.to_sym) %>

    <%= form_for [refinery, :contact_inquiries, @contact_inquiry] do |f| %>
      <%= render '/refinery/admin/error_messages',
                 :object => @contact_inquiry,
                 :include_object_name => true  %>

      <div class='field first_name_field string_field'>
        <%= f.required_label :first_name %>
        <%= f.text_field :first_name %>
      </div>

      <div class='field last_name_field string_field'>
        <%= f.label :last_name %>
        <%= f.text_field :last_name %>
      </div>

      <div class='field email_field string_field'>
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>

      <div class='field message_field text_field'>
        <%= f.label :message %>
        <%= f.text_area :message, :rows => 8 %>
      </div>

      <div class='actions'>
        <%= f.submit t('.send') %>
      </div>
    <% end %>
  </div>
<% end %>
<%= render '/refinery/content_page' %>
